<div class="book delete">
<h2>Delete Book</h2>

    <%= form_for(@book, :method => 'delete') do |form| %>
        
            <p>Are you sure you want to permanently delete this book?</p>
            <p>
                <strong>Title:</strong>
                <%= @book.title %>
            </p>

            <p>
                <strong>Author:</strong>
                <%= @book.author %>
            </p>

            <p>
                <strong>Price:</strong>
                <%= @book.price %>
            </p>

            <p>
                <strong>Published Date:</strong>
                <%= @book.published_date %>
            </p>

            <div class="actions">
                <%= form.submit("Delete Book") %>
            </div>
        <% end %>

    <%= link_to 'Back', books_path %>
</div>